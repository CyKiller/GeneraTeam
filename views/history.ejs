<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/_head.ejs') %>
    <title>User History</title>
</head>
<body>
<%- include('partials/_header.ejs') %>
<main role="main" class="container mt-4">
    <h1>Your History</h1>
    <p>Below is a list of your past requests and interactions with the generated teams.</p>
    <% if (requests && requests.length > 0) { %>
        <div class="list-group">
            <% requests.forEach(function(request) { %>
                <a href="/chat?requestId=<%= request._id %>" class="list-group-item list-group-item-action">
                    <h5 class="mb-1">Request: <%= request.requestText.substring(0, 100) %>...</h5>
                    <small>Submitted on <%= request.createdAt.toDateString() %></small>
                </a>
            <% }); %>
        </div>
    <% } else { %>
        <p>You have no past requests.</p>
    <% } %>
</main>
<%- include('partials/_footer.ejs') %>
<script src="/js/main.js"></script>
</body>
</html>