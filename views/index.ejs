<!DOCTYPE html>
<html lang="en">
<%- include('partials/_head.ejs') %>
  <body>
<%- include('partials/_header.ejs') %>
    <main role="main" class="container mt-4">
      <div class="text-center">
        <h1>GeneraTeam</h1>
        <p>Welcome to GeneraTeam! Here you can submit requests and interact with your generated team.</p>
        <!-- Request Form Start -->
        <form action="/api/requests" method="POST" class="mt-4">
          <div class="mb-3">
            <label for="requestText" class="form-label">Your Request</label>
            <textarea class="form-control" id="requestText" name="requestText" rows="3" required></textarea>
          </div>
          <button type="submit" class="btn btn-primary">Submit Request</button>
        </form>
        <!-- Request Form End -->
        <!-- Navigation to User History Start -->
        <div class="mt-4">
          <a href="/history" class="btn btn-secondary">View History and Chats</a>
        </div>
        <!-- Navigation to User History End -->
      </div>
    </main>
  </body>
<%- include('partials/_footer.ejs') %>
  <script src="/js/main.js"></script>
</html>